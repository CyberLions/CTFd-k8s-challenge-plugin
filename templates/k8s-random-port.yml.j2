apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ deployment_name }}
  namespace: {{ challenge_namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ deployment_name }}
  template:
    metadata:
      labels:
        app: {{ deployment_name }}
    spec:
      containers:
      - name: {{ deployment_name }}
        image: {{ container_name }}
        imagePullPolicy: Always
        ports:
        - name: {{ deployment_name }}-{{ challenge_port }}
          containerPort: {{ challenge_port }}
          protocol: TCP
---
apiVersion: v1
kind: Service
metadata:
  name: {{ deployment_name }}-service
  namespace: {{ challenge_namespace }}
spec:
  selector:
    app: {{ deployment_name }}
  ports:
    - name: {{ deployment_name }}-{{ challenge_port }}
      protocol: TCP
      port: {{ challenge_port }}
      targetPort: {{ challenge_port }}
---
apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
  name: {{ deployment_name }}-tcp-{{ random_port }}-gateway
  namespace: {{ istio_namespace }}
spec:
  selector:
    istio: {{ istio_ingress_name }}
  servers:
  - port:
      number: {{ random_port }}
      protocol: TCP
      name: tcp
    hosts:
    - '*'
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{ deployment_name }}-vs
  namespace: {{ challenge_namespace }}
spec:
  hosts:
  - "*"
  gateways:
  - {{ istio_namespace }}/{{ deployment_name }}-tcp-{{ random_port }}-gateway
  tcp:
  - match:
    - port: {{ random_port }}
    route:
    - destination:
        host: {{ deployment_name }}-service
        port:
          number: {{ challenge_port }}
---
apiVersion: networking.istio.io/v1alpha3
kind: DestinationRule
metadata:
  name: {{ deployment_name }}
  namespace: {{ challenge_namespace }}
spec:
  host: {{ deployment_name }}-service
  trafficPolicy:
    tls:
      mode: DISABLE